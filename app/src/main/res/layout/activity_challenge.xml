<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modulos.laboratorio.views.ChallengeActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_child"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/challenge_photo_parent"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:src="@color/colorGrayLight"
                app:civ_circle_background_color="@color/colorGrayLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/challenge_photo_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-70dp"
                android:layout_gravity="center"
                android:src="@color/colorPrimaryYaku"
                app:civ_circle_background_color="@color/colorGrayLight"
                app:layout_constraintStart_toEndOf="@+id/challenge_photo_parent"
                app:layout_constraintTop_toTopOf="@+id/challenge_photo_parent"
                app:riv_corner_radius="10dp" />
            <View
                android:id="@+id/divisor_challenge"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_photo_parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divisor_challenge">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewPhoto"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_image_defect"
                    app:civ_border_color="#EAEAEA"
                    app:civ_border_width="40dp"
                    app:civ_circle_background_color="#EAEAEA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewImagenNosubida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Imagen no subida"
                    android:textColor="#999"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/circleImageViewPhoto"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageViewPhoto"
                    app:layout_constraintStart_toStartOf="@+id/circleImageViewPhoto"
                    app:layout_constraintTop_toTopOf="@+id/circleImageViewPhoto" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:backgroundTint="@color/colorPrimaryYaku"
                    android:src="@drawable/ic_menu_camera"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/circleImageViewPhoto"
                    app:layout_constraintEnd_toEndOf="@+id/circleImageViewPhoto" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/buttom_normal"
                    android:textAllCaps="false"
                    android:text="@string/registrarChallengeText"
                    android:textColor="@color/white"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/circleImageViewPhoto" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>