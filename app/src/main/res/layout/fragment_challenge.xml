<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedorChallenge"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modulos.laboratorio.fragments.ChallengeFragment">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/challenge_photo_parent"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:src="@drawable/circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/challenge_photo_child"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginLeft="-70dp"
                android:layout_gravity="center"
                app:fabSize="auto"
                app:borderWidth="0dp"
                android:backgroundTint="@color/colorSecondaryYaku"
                app:tint="@null"

                app:maxImageSize="70dp"
                app:fabCustomSize="100dp"
                android:scaleType="center"
                android:src="@drawable/flower_margarita"
                app:layout_constraintStart_toEndOf="@+id/challenge_photo_parent"
                app:layout_constraintTop_toTopOf="@+id/challenge_photo_parent" />
            <View
                android:id="@+id/divisor_challenge"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/challenge_photo_parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divisor_challenge">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/challenge_photo_to_complete"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_loadImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:indeterminateTint="@color/colorSecondaryYaku"
                    app:layout_constraintBottom_toBottomOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintEnd_toEndOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintStart_toStartOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintTop_toTopOf="@+id/challenge_photo_to_complete" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewImagenNosubida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Imagen no subida"
                    android:textColor="#999"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintEnd_toEndOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintStart_toStartOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintTop_toTopOf="@+id/challenge_photo_to_complete" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:backgroundTint="@color/colorSecondaryYaku"
                    android:src="@drawable/ic_menu_camera"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/challenge_photo_to_complete"
                    app:layout_constraintEnd_toEndOf="@+id/challenge_photo_to_complete" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/buttom_normal"
                    android:textAllCaps="false"
                    android:text="@string/registrarChallengeText"
                    android:textColor="@color/white"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/challenge_photo_to_complete" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>