<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/imageViewMedalPoints"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_radius_style" />

        <View
            android:id="@+id/textViewPoints"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_radius_style"
            android:contentDescription="Sube una foto"
            android:text="501"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <View
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_radius_style"
            android:text="Puntos"
            android:textColor="@color/white" />

    </LinearLayout>

    <View
        android:id="@+id/dividerMiddle"
        android:layout_width="1in"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_radius_style"
        app:layout_constraintEnd_toEndOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/dividerMiddle"
        app:layout_constraintStart_toStartOf="@+id/dividerMiddle"
        app:layout_constraintTop_toBottomOf="@+id/dividerMiddle">

        <LinearLayout
            android:id="@+id/contenerdor_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/contenerdor_two"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_radius_style"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/circle_skeleton" />

            <View
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_radius_style" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenerdor_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/contenerdor_one"
            app:layout_constraintRight_toLeftOf="@+id/contenedor_three"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_radius_style" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/circle_skeleton" />

            <View
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_radius_style" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/contenedor_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/contenerdor_two"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_radius_style" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/circle_skeleton" />

            <View
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_radius_style" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>